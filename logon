$(function () {
  $('#submitBtn').click(function () {
	  var $inputUserName = $('#inputUserName');
		var $inputPassword = $('#inputPassword');
		
		if ($inputUserName.val() && $inputPassword.val()) {
		  alert('登录成功');
		} else {
		  alert('登录失败');
		}
		
		return false;
	});
})




